<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.ssafy.urc.model.dao.RouteDao">
  
  	<select id="selectRouteByAttributes" resultType="com.ssafy.urs.model.dto.Route">
        SELECT *
        FROM Route
        WHERE theme = #{theme}
          AND district= #{district}
          AND duration= #{duration};
    </select>
	
	
	<select id="selectAllRoutes">
		SELECT *
		FROM Route;
	</select>
	
	<select id="selectExampleRoutes">
		SELECT *
		FROM Route
		LIMIT 3;
	</select>
	
	<select id="selectRouteById" parameterType="int">
		SELECT *
		FROM Route;
		WHERE id=#{routeId};
	</select>
	

  
  </mapper>