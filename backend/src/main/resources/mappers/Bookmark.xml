<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.ssafy.urc.model.dao.BookmarkDao">
  
  	<insert id="insertBookmark" parameterType="Route">
		INSERT INTO Bookmark (user_id, route_id)
		VALUES (#{userId}, #{routeId}) 
		
	</insert>
	
	<select id="selectAllBookmarks" parameterType="int">
		SELECT *
		FROM Bookmark
		WHERE id=#{userId};
	</select>
	
	<delete id="deletebookmark" parameterType="int">
		DELETE 
		FROM Bookmark
		WHERE id=#{routeId};
	</delete>
	
	
  
  </mapper>